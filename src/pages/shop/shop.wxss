/* pages/shop/shop.wxss */
/* 头部样式 */
.header{
  background: #a4a5a4;
}
/* 搜素样式 */
.search{
  display: flex;
  width: 100%;
  height: 100rpx;
  background-color: #eee7e7;
}
.search image{
  position:absolute;
  width: 70rpx;
  height: 70rpx;
  margin:10rpx 0 0 20rpx;
}
.search input{
  position: relative;
  flex: 7;
  height: 80%;
  padding-left:100rpx;
  margin: 5rpx 50rpx 5rpx 10rpx;
  border: 1rpx solid #c2bfbf;
}
.search button{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 70%;
  margin: 15rpx 10rpx 0 0;
}
/* 轮播图样式 */
.lunbo image{
  width: 100%;
  height: 100%;
}